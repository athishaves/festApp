<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guests_items_listview"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_gravity="center_horizontal|center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/guest_image"
                    android:src="@drawable/milagro_main"
                    android:layout_gravity="center_horizontal"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FBC437"
                    android:contentDescription="@string/guests"
                    android:layout_width="96dp"
                    android:layout_height="96dp"/>

                <TextView
                    android:id="@+id/guest_name"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="@string/guests"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:fontFamily="@font/simonetta"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/guest_occup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/guests"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/simonetta"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</FrameLayout>